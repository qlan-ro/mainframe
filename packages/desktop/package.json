{
  "name": "@mainframe/desktop",
  "version": "0.2.0",
  "description": "Mainframe desktop app â€” Electron/React frontend for orchestrating AI agents",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qlan-ro/mainframe.git",
    "directory": "packages/desktop"
  },
  "author": "Mainframe Contributors",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev | pino-pretty",
    "build": "electron-vite build && node scripts/bundle-daemon.mjs",
    "clean": "rm -rf out dist",
    "start": "electron-vite preview",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:playwright": "playwright test -c playwright-ct.config.ts",
    "package": "electron-builder"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.12.11",
    "@assistant-ui/react-markdown": "^0.12.4",
    "@mainframe/core": "workspace:*",
    "@mainframe/types": "workspace:*",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/vite": "^4.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "diff": "^8.0.3",
    "lucide-react": "^0.575.0",
    "monaco-editor": "^0.55.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.6.4",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "tailwind-merge": "^3.5.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "jsdom": "^28.1.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.qlan-ro.mainframe",
    "productName": "Mainframe",
    "icon": "resources/icon",
    "files": [
      "out/**/*",
      "resources/icon*",
      "resources/favicon.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/daemon.cjs",
        "to": "daemon.cjs"
      },
      {
        "from": "../../node_modules/better-sqlite3",
        "to": "node_modules/better-sqlite3",
        "filter": [
          "**/*",
          "!**/*.md"
        ]
      },
      {
        "from": "../../node_modules/bindings",
        "to": "node_modules/bindings"
      },
      {
        "from": "../../node_modules/file-uri-to-path",
        "to": "node_modules/file-uri-to-path"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "qlan-ro",
      "repo": "mainframe"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
